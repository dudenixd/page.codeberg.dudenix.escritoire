{
    "id": "page.codeberg.dudenix.escritoire",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "escritoire",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_REGISTRIES_CRATES_IO_PROTOCOL": "sparse"
        }
    },
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ]
        },
        {
            "name": "escritoire",
            "buildsystem": "meson",
            "run-tests": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://codeberg.org/dudenix/escritoire/releases/download/v0.1.2/escritoire-0.1.2.tar.xz",
                    "sha256": "c5c141b3b15cc686005019cd39cf7d2f8eaf2b9e0040395129f8ad7be39ac706"
                }
            ]
        }
    ]
}