{
    "id": "page.codeberg.dudenix.escritoire",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "escritoire",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_REGISTRIES_CRATES_IO_PROTOCOL": "sparse"
        }
    },
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ]
        },
        {
            "name": "typst",
            "buildsystem": "simple",
            "build-commands": [
                "tar xf typst.tar.xz --strip-components=1",
                "cp typst /app/bin/typst"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/typst/typst/releases/download/v0.13.1/typst-aarch64-unknown-linux-musl.tar.xz",
                    "sha256": "4f5b7ee6e57fb639019ee0f6bffcf940edad228ede6ff5269a9f05a1544ceed4",
                    "dest-filename": "typst.tar.xz",
                    "only_arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "file",
                    "url": "https://github.com/typst/typst/releases/download/v0.13.1/typst-x86_64-unknown-linux-musl.tar.xz",
                    "sha256": "7d214bfeffc2e585dc422d1a09d2b144969421281e8c7f5d784b65fc69b5673f",
                    "dest-filename": "typst.tar.xz",
                    "only_arches": [
                        "x86_64"
                    ]
                }
            ]
        },
        {
            "name": "escritoire",
            "buildsystem": "meson",
            "run-tests": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://codeberg.org/dudenix/escritoire/releases/download/v0.1.1/escritoire-0.1.1.tar.xz",
                    "sha256": "242292466a28a4386e6ebf5cca95d3fed64a02c103320b893a8594f0a65cabba"
                }
            ]
        }
    ]
}